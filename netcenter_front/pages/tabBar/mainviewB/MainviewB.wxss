.weui-lable1 {
  word-wrap: break-word;
  word-break: break-all;
  width: 540rpx;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 100rpx;
}

.container {
  align-items: center;
  font-size: 32rpx;
  flex-direction: column;
  font-family: -apple-system-font, Helvetica Neue, Helvetica, sans-serif;
