.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.picBox {
  width: 100%;
  height: 400rpx;
  position: absolute;
  top: 0%;
