/**app.wxss**/
@import 'pages/component/weui/weui.wxss';
.container {
  display: flex;
  align-items: center;
  box-sizing: border-box;
  min-height: 100%;
  justify-content: space-between;
  font-size: 32rpx;
  font-family: -apple-system-font,Helvetica Neue,Helvetica,sans-serif;
} 
.picker{
   padding:23rpx 50rpx;
   margin-right:20rpx;
   margin-left:20rpx;
   background-color: #FFFFFF;
}
.page-body {
  width: 100%;
  flex-grow: 1;
  overflow-x: hidden;
  justify-content: center;
}
.text_center {
  text-align: center;
}
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}